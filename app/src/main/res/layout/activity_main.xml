<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ratio Back"
            android:onClick="setRatio"/>
    </LinearLayout>

    <com.yulin.carrunningarcviewdemo.CarRunningArcView
        android:id="@+id/id_car_running"
        android:layout_below="@id/id_ll"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:arcInsideStroke="10dp"
        app:arcOutSideStroke="12dp"
        />
</RelativeLayout>

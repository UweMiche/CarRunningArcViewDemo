<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0D12"
    >

    <LinearLayout
        android:id="@+id/id_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ratio Forward"
            android:onClick="forward"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ratio Back"
            android:onClick="ratioBack"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="reCreate"
            android:onClick="reCreate"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Handler"
            android:onClick="handler"/>
    </LinearLayout>

        <com.yulin.carrunningarcviewdemo.CarRunningArcView
            android:id="@+id/id_car_running"
            android:layout_below="@id/id_ll"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            app:arcInsideStroke="28dp"
            app:arcOutSideStroke="17dp"
            />
</RelativeLayout>
